{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": ["docs/**/*.ts", "docs/**/*.vue", "docs/**/*.md"],
  "exclude": ["functions/**/*"],
  "vueCompilerOptions": {
    "vitePressExtensions": [".md"]
  }
}
